<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="@android:integer/config_shortAnimTime"
        motion:motionInterpolator="easeInOut">
        <KeyFrameSet>
            <KeyAttribute
                android:alpha="0.5"
                motion:framePosition="100"
                motion:motionTarget="@+id/frontPage" />
        </KeyFrameSet>
        <OnSwipe motion:touchAnchorId="@+id/frontPage" />
    </Transition>

    <ConstraintSet android:id="@+id/start">

        <Constraint android:id="@+id/toolbar">
            <PropertySet motion:motionProgress="0"/>
        </Constraint>

        <Constraint
            android:id="@+id/frontPage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/backdrop_expanded_margin"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end"
        motion:deriveConstraintsFrom="@id/start">

        <Constraint android:id="@+id/toolbar">
            <PropertySet motion:motionProgress="1"/>
        </Constraint>

        <Constraint
            android:id="@+id/frontPage"
            android:layout_width="0dp"
            android:layout_height="@dimen/backdrop_collapsed_height"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
    </ConstraintSet>
</MotionScene>